<Window x:Class="Exam.Logo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exam"
        mc:Ignorable="d"
        Title="Logo" Height="420" Width="600">
    <Grid>
        <Image Source="65.jpg"></Image>
        <Button x:Name="logo" Click="logo_Click" IsDefault="True" IsCancel="True">
            <Image Source="65.jpg"></Image>
        </Button>
        <Label HorizontalAlignment="Left" VerticalAlignment="Top">Что бы продолжить - Нажмите кнопку Enter или Escape</Label>
        <Label HorizontalAlignment="Right" VerticalAlignment="Bottom">Нажмите кнопку Enter или Escape, что бы продолжить</Label>
    </Grid>
</Window>
