<Page x:Class="Exam.Pages.Topic"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exam.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      FontSize="20"
      Title="Выбор темы">

    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Выберите тему:</Label>
            </StackPanel>
            <StackPanel>
                <RadioButton>Тема 1</RadioButton>
                <RadioButton>Тема 2</RadioButton>
                <RadioButton>Тема 3</RadioButton>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="Accept" Click="Accept_Click">Принять</Button>
                <Button x:Name="Cancel" Click="Cancel_Click">Отмена</Button>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>
